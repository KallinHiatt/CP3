FloatLayout:
    Button:
        text: "top left"
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.4, 'y': 0.45}

ScreenManager:
    id: screen_manager
    transition: NoTransition()

    Screen:
        name: 'Home_screen'

        Button:
            text: 'Go to settings'
            on_press: screen_manager.current = 'settings_screen'
        